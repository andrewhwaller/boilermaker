# frozen_string_literal: true

module Views
<% if namespaced? -%>
  module <%= namespace.classify %>
<% end -%>
    class New < Views::Base
      include Phlex::Rails::Helpers::LinkTo

      def initialize(<%= instance_name %>:)
        @<%= instance_name %> = <%= instance_name %>
      end

      def view_template
        h1(class: "text-2xl font-bold mb-6") { "New <%= model_name %>" }

        render <%= namespaced? ? "Views::#{namespace.classify}::" : "Views::" %>Form.new(<%= instance_name %>: <%= instance_name %>)

        div(class: "mt-4") do
          link_to("Back", 
                  <%= plural_table_name %>_path, 
                  class: "text-gray-600 hover:text-gray-900")
        end
      end

      private

      attr_reader :<%= instance_name[1..-1] %>
    end
<% if namespaced? -%>
  end
<% end -%> 