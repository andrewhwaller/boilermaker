<div class="boilermaker-header">
  <h1>Boilermaker Settings</h1>
  <p class="boilermaker-subtitle">Configure your application settings and feature toggles</p>
</div>

<!-- Application Configuration -->
<div class="settings-section">
  <h2>Application Configuration</h2>
  
  <% if @settings.any? && @settings['app'] %>
    <div class="config-grid">
      <div class="config-item">
        <span class="config-label">Application Name</span>
        <span class="config-value"><%= @settings.dig('app', 'name') || 'Boilermaker' %></span>
      </div>
      
      <div class="config-item">
        <span class="config-label">Version</span>
        <span class="config-value"><%= @settings.dig('app', 'version') || '1.0.0' %></span>
      </div>
      
      <div class="config-item">
        <span class="config-label">Support Email</span>
        <span class="config-value"><%= @settings.dig('app', 'support_email') || 'support@example.com' %></span>
      </div>
      
      <% if @settings.dig('app', 'description') %>
        <div class="config-item config-item-full">
          <span class="config-label">Description</span>
          <span class="config-value"><%= @settings.dig('app', 'description') %></span>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <p>No application configuration found.</p>
    </div>
  <% end %>
</div>

<!-- Theme Configuration -->
<div class="settings-section">
  <h2>Theme Configuration</h2>
  
  <div class="config-grid">
    <div class="config-item">
      <span class="config-label">Light Theme</span>
      <span class="config-value"><%= @settings.dig('ui', 'theme', 'light') || 'platinum' %></span>
    </div>
    
    <div class="config-item">
      <span class="config-label">Dark Theme</span>
      <span class="config-value"><%= @settings.dig('ui', 'theme', 'dark') || 'graphite' %></span>
    </div>
  </div>
</div>

<!-- Feature Toggles -->
<div class="settings-section">
  <h2>Feature Toggles</h2>
  
  <% if @features.any? %>
    <div class="features-grid">
      <% @features.each do |feature, enabled| %>
        <div class="feature-item">
          <div class="feature-info">
            <span class="feature-name"><%= feature.humanize %></span>
            <span class="feature-description">
              <% case feature %>
              <% when 'user_registration' %>
                Allow new users to register accounts
              <% when 'password_reset' %>
                Enable password reset functionality
              <% when 'two_factor_authentication' %>
                Require TOTP/recovery codes for login
              <% when 'multi_tenant' %>
                Support multiple organizations/accounts
              <% when 'personal_accounts' %>
                Enable personal user accounts
              <% else %>
                Feature toggle setting
              <% end %>
            </span>
          </div>
          
          <div class="feature-status <%= enabled ? 'enabled' : 'disabled' %>">
            <%= enabled ? 'Enabled' : 'Disabled' %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <p>No features configured.</p>
    </div>
  <% end %>
</div>

<!-- Actions -->
<div class="actions-section">
  <div class="action-info">
    <p class="action-title">Development Settings</p>
    <p class="action-subtitle">These settings are only editable in development mode</p>
  </div>
  
  <div class="action-buttons">
    <%= link_to "Edit Settings", boilermaker.edit_settings_path, class: "btn btn-primary" %>
  </div>
</div>

<% if Rails.env.development? %>
  <div class="notice-box">
    <p>After changing critical settings, restart your development server for changes to take full effect.</p>
  </div>
<% end %> 
