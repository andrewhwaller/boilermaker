<div class="mb-6 border-b border-primary/30 pb-4">
  <h1 class="text-2xl font-bold text-primary font-mono uppercase tracking-wider">A1-CONFIG EDITOR</h1>
  <p class="text-xs text-base-content/70 font-mono uppercase tracking-wide">MODIFY SYSTEM CONFIGURATION & FEATURE TOGGLES</p>
</div>

<%= form_with url: boilermaker.settings_path, method: :patch, local: true, scope: :settings, class: "space-y-6" do |form| %>
  
  <!-- A2-APPLICATION CONFIG -->
  <div class="bg-base-200 border border-base-300">
    <div class="bg-primary/20 border-b border-primary/30 px-4 py-2">
      <h2 class="text-xs font-bold text-primary uppercase tracking-wider font-mono">A2-APPLICATION CONFIG</h2>
    </div>
    <div class="p-4">
    
    <%= form.fields_for :app do |app_form| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="form-group">
          <%= app_form.label :name, "APP.NAME", class: "text-xs text-info uppercase tracking-wide font-mono font-bold" %>
          <%= app_form.text_field :name, 
                value: @settings.dig('app', 'name') || 'Boilermaker', 
                class: "w-full bg-base-300/50 border border-base-300 text-base-content font-mono px-3 py-2 focus:border-primary focus:outline-none",
                placeholder: "[ENTER APP NAME]" %>
        </div>
        
        <div class="form-group">
          <%= app_form.label :version, "APP.VERSION", class: "text-xs text-info uppercase tracking-wide font-mono font-bold" %>
          <%= app_form.text_field :version, 
                value: @settings.dig('app', 'version') || '1.0.0', 
                class: "w-full bg-base-300/50 border border-base-300 text-base-content font-mono px-3 py-2 focus:border-primary focus:outline-none",
                placeholder: "[e.g., 1.0.0]" %>
        </div>
        
        <div class="form-group">
          <%= app_form.label :support_email, "SUPPORT.EMAIL", class: "text-xs text-info uppercase tracking-wide font-mono font-bold" %>
          <%= app_form.email_field :support_email, 
                value: @settings.dig('app', 'support_email') || 'support@example.com', 
                class: "w-full bg-base-300/50 border border-base-300 text-base-content font-mono px-3 py-2 focus:border-primary focus:outline-none",
                placeholder: "[support@example.com]" %>
        </div>
        
        <div class="form-group form-group-full md:col-span-2">
          <%= app_form.label :description, "APP.DESCRIPTION", class: "text-xs text-info uppercase tracking-wide font-mono font-bold" %>
          <%= app_form.text_area :description, 
                value: @settings.dig('app', 'description') || 'A modern Rails application', 
                class: "w-full bg-base-300/50 border border-base-300 text-base-content font-mono px-3 py-2 focus:border-primary focus:outline-none",
                rows: 4,
                placeholder: "[BRIEF APPLICATION DESCRIPTION]" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>

  <!-- B1-FEATURE TOGGLES -->
  <div class="bg-base-200 border border-base-300">
    <div class="bg-success/20 border-b border-success/30 px-4 py-2">
      <h2 class="text-xs font-bold text-success uppercase tracking-wider font-mono">B1-FEATURE TOGGLES</h2>
    </div>
    <div class="p-4">
    
    <%= form.fields_for :features do |features_form| %>
      <div class="space-y-4">
        <div class="flex items-center justify-between py-3 border-b border-base-300/50">
          <div class="toggle-info">
            <span class="text-sm font-mono text-base-content uppercase tracking-wide font-bold">USER.REGISTRATION</span>
            <div class="text-xs text-base-content/70 font-mono">ALLOW NEW USER ACCOUNT CREATION</div>
          </div>
          <div>
            <%= features_form.check_box :user_registration, 
                  { checked: @features['user_registration'] == true, class: "toggle toggle-success", id: "toggle_user_registration" }, 
                  "true", "false" %>
          </div>
        </div>
        
        <div class="flex items-center justify-between py-3 border-b border-base-300/50">
          <div class="toggle-info">
            <span class="text-sm font-mono text-base-content uppercase tracking-wide font-bold">PASSWORD.RESET</span>
            <div class="text-xs text-base-content/70 font-mono">ENABLE PASSWORD RECOVERY SYSTEM</div>
          </div>
          <div>
            <%= features_form.check_box :password_reset, 
                  { checked: @features['password_reset'] == true, class: "toggle toggle-success", id: "toggle_password_reset" }, 
                  "true", "false" %>
          </div>
        </div>
        
        <div class="flex items-center justify-between py-3 border-b border-base-300/50">
          <div class="toggle-info">
            <span class="text-sm font-mono text-base-content uppercase tracking-wide font-bold">TWO.FACTOR.AUTH</span>
            <div class="text-xs text-base-content/70 font-mono">REQUIRE TOTP/RECOVERY CODES FOR LOGIN</div>
          </div>
          <div>
            <%= features_form.check_box :two_factor_authentication, 
                  { checked: @features['two_factor_authentication'] == true, class: "toggle toggle-success", id: "toggle_two_factor_authentication" }, 
                  "true", "false" %>
          </div>
        </div>
        
        <div class="flex items-center justify-between py-3 border-b border-base-300/50">
          <div class="toggle-info">
            <span class="text-sm font-mono text-base-content uppercase tracking-wide font-bold">MULTI.TENANT</span>
            <div class="text-xs text-base-content/70 font-mono">SUPPORT MULTIPLE ORGANIZATIONS/ACCOUNTS</div>
          </div>
          <div>
            <%= features_form.check_box :multi_tenant, 
                  { checked: @features['multi_tenant'] == true, class: "toggle toggle-success", id: "toggle_multi_tenant" }, 
                  "true", "false" %>
          </div>
        </div>
        
        <div class="flex items-center justify-between py-3">
          <div class="toggle-info">
            <span class="text-sm font-mono text-base-content uppercase tracking-wide font-bold">PERSONAL.ACCOUNTS</span>
            <div class="text-xs text-base-content/70 font-mono">ENABLE PERSONAL USER ACCOUNTS</div>
          </div>
          <div>
            <%= features_form.check_box :personal_accounts, 
                  { checked: @features['personal_accounts'] == true, class: "toggle toggle-success", id: "toggle_personal_accounts" }, 
                  "true", "false" %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>

  <!-- C1-UI THEME -->
  <div class="bg-base-200 border border-base-300">
    <div class="bg-warning/20 border-b border-warning/30 px-4 py-2">
      <h2 class="text-xs font-bold text-warning uppercase tracking-wider font-mono">C1-UI THEME</h2>
    </div>
    <div class="p-4">

    <div class="form-grid">
      <%= form.fields_for :ui do |ui_form| %>
        <%= ui_form.fields_for :theme do |theme_form| %>
          <% builtins_light = Boilermaker::Themes::LIGHT %>
          <% builtins_dark  = Boilermaker::Themes::DARK %>
          <% custom_light = [["platinum (custom)", "platinum"]] %>
          <% custom_dark  = [["graphite (custom)", "graphite"], ["command-center (custom)", "command-center"]] %>
          <% grouped_light = [
            ["Custom", custom_light],
            ["Light (built-in)", builtins_light.sort.map { |n| [n, n] }]
          ] %>
          <% grouped_dark = [
            ["Custom", custom_dark],
            ["Dark (built-in)", builtins_dark.sort.map { |n| [n, n] }]
          ] %>

          <div class="form-group">
            <%= theme_form.label :light, "THEME.LIGHT", class: "text-xs text-warning uppercase tracking-wide font-mono font-bold" %>
            <%= theme_form.select :light,
                  grouped_options_for_select(grouped_light, @settings.dig('ui', 'theme', 'light') || 'platinum'),
                  {},
                  class: "w-full bg-base-300/50 border border-base-300 text-base-content font-mono px-3 py-2 focus:border-primary focus:outline-none" %>
          </div>

          <div class="form-group">
            <%= theme_form.label :dark, "THEME.DARK", class: "text-xs text-warning uppercase tracking-wide font-mono font-bold" %>
            <%= theme_form.select :dark,
                  grouped_options_for_select(grouped_dark, @settings.dig('ui', 'theme', 'dark') || 'graphite'),
                  {},
                  class: "w-full bg-base-300/50 border border-base-300 text-base-content font-mono px-3 py-2 focus:border-primary focus:outline-none" %>
          </div>
        <% end %>
      <% end %>
    </div>

    <p class="text-xs text-base-content/70 font-mono bg-base-300/30 p-3 border-l-2 border-warning/50">
      SYSTEM NOTE: Built-in DaisyUI themes must be included at build time. Saving updates the prebuilt theme list so Tailwind bundles only the selected built-ins; custom themes (platinum/graphite/command-center) are always available.
    </p>
    </div>
  </div>

  <!-- D1-ACTIONS -->
  <div class="bg-base-200 border border-base-300">
    <div class="bg-error/20 border-b border-error/30 px-4 py-2">
      <h2 class="text-xs font-bold text-error uppercase tracking-wider font-mono">D1-ACTIONS</h2>
    </div>
    <div class="p-4 flex items-center justify-between">
      <div>
        <p class="text-sm font-semibold text-base-content font-mono uppercase tracking-wide">DEVELOPMENT.ENVIRONMENT</p>
        <p class="text-xs text-base-content/70 font-mono">CHANGES APPLIED TO DEV ENV ONLY</p>
      </div>
      <div class="flex gap-2">
        <%= link_to "[CANCEL]", boilermaker.settings_path, class: "text-base-content/70 hover:text-base-content font-mono uppercase tracking-wide border border-base-300 px-3 py-1" %>
        <%= form.submit "[UPDATE CONFIG]", class: "bg-primary text-primary-content hover:bg-primary/80 font-mono uppercase tracking-wide border border-primary px-3 py-1 cursor-pointer" %>
      </div>
    </div>
  </div>
  
<% end %>

<div class="bg-warning/10 border border-warning/30 p-4">
  <div class="flex items-center gap-2 mb-2">
    <div class="w-2 h-2 bg-warning rounded-full animate-pulse"></div>
    <span class="text-warning font-mono uppercase tracking-wide text-xs font-bold">SYSTEM WARNING:</span>
  </div>
  <span class="text-base-content/80 font-mono text-sm block mb-2">RESTART DEV SERVER AFTER CRITICAL CONFIG CHANGES FOR FULL EFFECT</span>
  <span class="text-base-content/60 font-mono text-xs">DISABLED FEATURE TOGGLES MAY SHOW UI ELEMENTS UNTIL RESTART</span>
</div> 
