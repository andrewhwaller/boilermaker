<div class="boilermaker-settings-edit">
  <h1>Edit Boilermaker Settings</h1>
  
  <%= form_with url: boilermaker.settings_path, method: :patch, local: true, scope: :settings do |form| %>
    
    <div class="settings-section">
      <h2>Application Configuration</h2>
      
      <%= form.fields_for :app do |app_form| %>
        <div class="form-group">
          <%= app_form.label :name, "Application Name" %>
          <%= app_form.text_field :name, value: @settings.dig('app', 'name') || 'Boilermaker', class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= app_form.label :version, "Version" %>
          <%= app_form.text_field :version, value: @settings.dig('app', 'version') || '1.0.0', class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= app_form.label :support_email, "Support Email" %>
          <%= app_form.email_field :support_email, value: @settings.dig('app', 'support_email') || 'support@example.com', class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= app_form.label :description, "Description" %>
          <%= app_form.text_area :description, value: @settings.dig('app', 'description') || 'A modern Rails application', class: "form-control", rows: 3 %>
        </div>
      <% end %>
    </div>

    <div class="features-section">
      <h2>Feature Toggles</h2>
      
      <%= form.fields_for :features do |features_form| %>
        <div class="form-group">
          <%= features_form.check_box :user_registration, { checked: @features['user_registration'] == true }, "true", "false" %>
          <%= features_form.label :user_registration, "User Registration" %>
        </div>
        
        <div class="form-group">
          <%= features_form.check_box :password_reset, { checked: @features['password_reset'] == true }, "true", "false" %>
          <%= features_form.label :password_reset, "Password Reset" %>
        </div>
        
        <div class="form-group">
          <%= features_form.check_box :two_factor_authentication, { checked: @features['two_factor_authentication'] == true }, "true", "false" %>
          <%= features_form.label :two_factor_authentication, "Two-Factor Authentication" %>
        </div>
        
        <div class="form-group">
          <%= features_form.check_box :multi_tenant, { checked: @features['multi_tenant'] == true }, "true", "false" %>
          <%= features_form.label :multi_tenant, "Multi-Tenant Support" %>
        </div>
        
        <div class="form-group">
          <%= features_form.check_box :personal_accounts, { checked: @features['personal_accounts'] == true }, "true", "false" %>
          <%= features_form.label :personal_accounts, "Personal Accounts" %>
        </div>
      <% end %>
    </div>

    <div class="actions">
      <%= form.submit "Update Settings", class: "btn btn-primary" %>
      <%= link_to "Cancel", boilermaker.settings_path, class: "btn btn-secondary" %>
    </div>
    
  <% end %>
</div>

<style>
  .boilermaker-settings-edit {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .settings-section, .features-section {
    margin-bottom: 30px;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }
  
  .form-group {
    margin-bottom: 15px;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }
  
  .form-control {
    width: 100%;
    padding: 8px 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 14px;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
  }
  
  input[type="checkbox"] {
    margin-right: 8px;
  }
  
  .btn {
    display: inline-block;
    padding: 10px 20px;
    margin-right: 10px;
    text-decoration: none;
    border-radius: 5px;
    border: none;
    cursor: pointer;
    font-size: 14px;
  }
  
  .btn-primary {
    background-color: #007bff;
    color: white;
  }
  
  .btn-primary:hover {
    background-color: #0056b3;
  }
  
  .btn-secondary {
    background-color: #6c757d;
    color: white;
  }
  
  .btn-secondary:hover {
    background-color: #545b62;
  }
  
  .actions {
    margin-top: 30px;
  }
</style> 