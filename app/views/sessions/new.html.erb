<h1 class="text-xl font-semibold mb-6">Sign in</h1>

<%= form_with(url: sign_in_path) do |form| %>
  <div class="mb-4">
    <%= form.label :email, class: "block mb-1 font-medium" %>
    <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "w-full p-2 border border-border bg-input text-foreground" %>
  </div>

  <div class="mb-4">
    <%= form.label :password, class: "block mb-1 font-medium" %>
    <%= form.password_field :password, required: true, autocomplete: "current-password", class: "w-full p-2 border border-border bg-input text-foreground" %>
  </div>

  <div class="mb-4">
    <%= form.submit "Sign in", class: "px-4 py-2 bg-button text-button-text border border-button hover:bg-button-hover" %>
  </div>
<% end %>

<div class="mt-8">
  <%= link_to "Sign up", sign_up_path, class: "text-blue-600 dark:text-blue-400 hover:underline" %> |
  <%= link_to "Forgot your password?", new_identity_password_reset_path, class: "text-blue-600 dark:text-blue-400 hover:underline" %>
</div>
